{
    "manifest_version": 2,
    "name": "Clipboard AutoTranslater Deepl",
    "version": "1.0",

    "description": "An addon that automatically pastes clipboard contents into Deepl Translater.",

    "icons": {},

    "permissions": [
    	"activeTab",
    	"clipboardRead",
    	"storage",
    	"file://*/*"
    ],

    "browser_action": {
    	"browser_style": true,
    	"default_icon": {
    	    "16": "icon/icon16.png",
    	    "32": "icon/icon32.png",
    	    "64": "icon/icon64.png"
    	},
    	"default_title": "Toggle clipboard paster for Translater"
    },

    "background": {
	   "page": "bg/index.html",
        "persistent": true
    },

    "options_ui": {
	   "page": "options.html"
    }
}
